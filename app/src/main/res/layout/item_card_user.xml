<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_card_name_user_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Leanuan"
                android:textSize="@dimen/mtrl_calendar_text_input_padding_top"
                android:textColor="@color/primary"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/item_phone_user_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="3232509541"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_phone_user" />
            <TextView
                android:id="@+id/item_email_user_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_email_user"
                tools:text="jhoan@gmail.com"/>
            <TextView
                android:id="@+id/item_card_posts_user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VER PUBLICACIONES"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_gravity="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>